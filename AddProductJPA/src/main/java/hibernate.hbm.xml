<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="demo.Product" table="Product">
      <id name="barcode" type="string" column="barcode">
         <generator class="native"/>
      </id>
      <property name="pname" column="pname" type="string"/>
      <property name="color" column="color" type="string"/> 
      <property name="pDescription" column="pDescription" type="string"/>
        
   </class>

</hibernate-mapping>